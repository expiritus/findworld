{% extends 'AdminBundle:default/index.html.twig' %}

{% block body %}
    <h1>Area</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ area.id }}</td>
            </tr>
            <tr>
                <th>Area</th>
                <td>{{ area.area }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_area_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_area_edit', { 'id': area.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
