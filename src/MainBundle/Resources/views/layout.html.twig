{% extends '::main/main.html.twig' %}
{% block header %}
    <div id="greetings">
        <span>
        {% if user_logged_in == false %}
            <a class="login_link" href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
            <a class="register_link" href="{{ url('fos_user_registration_register') }}">Register</a>
            <a class="forgot_password_link" href="{{ url('fos_user_resetting_request') }}">Forgot password?</a>
        {% else %}
            <a class="start_link" href="{{ url('personal_area_index') }}">Personal Area</a>
        {% endif %}
        </span>
        <span>
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                <a href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a>
            {% endif %}
        </span>
    </div>
    <div id="find_lost_links">
        <a id="lost" class="start_link" href="{{ url('personal_area', { 'action': 'lost' }) }}">I lost</a>
        <a id="find" class="start_link" href="{{ url('personal_area', { 'action': 'find' }) }}">I find</a>
    </div>
{% endblock %}